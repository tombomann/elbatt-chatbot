# Caddy ved chatbot.elbatt.no
chatbot.elbatt.no {

  @health path /health
  handle @health {
    respond 200 {
      body "ok"
    }
  }

  # Statisk (f.eks. embed.js) – valgfritt
  handle_path /embed.js {
    file_server
    root * /srv/public
    try_files {path}
  }

  # Alt annet til backend (FastAPI på Scaleway eller lokalt)
  route {
    reverse_proxy http://backend:8000
  }
}
